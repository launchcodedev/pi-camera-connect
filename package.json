{
  "name": "pi-camera-connect",
  "version": "0.3.0",
  "description": "Library to capture and stream Raspberry Pi camera data directly to NodeJS",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": {
    "name": "Launchcode",
    "email": "admin@lc.dev",
    "url": "https://lc.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/servall/pi-camera-connect"
  },
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf dist *.tsbuildinfo",
    "lint": "eslint --ext .ts,.tsx src",
    "fix": "eslint --ext .ts,.tsx src --fix",
    "test": "jest --runInBand",
    "prepublishOnly": "yarn clean && yarn build"
  },
  "dependencies": {
    "systeminformation": "4"
  },
  "devDependencies": {
    "@lcdev/eslint-config": "0.2",
    "@lcdev/jest": "0.2",
    "@lcdev/prettier": "0.1",
    "@lcdev/tsconfig": "0.1",
    "@types/jest": "25",
    "@types/node": "*",
    "eslint": "6",
    "jest": "25",
    "nodemon": "1",
    "prettier": "1",
    "typescript": "3"
  },
  "jest": {
    "preset": "@lcdev/jest"
  },
  "prettier": "@lcdev/prettier",
  "eslintConfig": {
    "extends": "@lcdev",
    "rules": {
      "no-constant-condition": 0,
      "no-shadow": 0
    }
  }
}
